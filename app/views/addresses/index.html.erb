<h2>Addresses</h2>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.first_name %></td>
        <td><%= address.last_name %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= link_to 'Show', address, data: {test: "show-#{address.id}"} %></td>
        <td><%= link_to 'Edit', edit_address_path(address), data: {test: "edit-#{address.id}"} %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?', test: "destroy-#{address.id}" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path, class: 'row justify-content-center', data: {test: 'create'} %>
