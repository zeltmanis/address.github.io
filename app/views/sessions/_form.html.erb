<%= form_for :session, url: session_path do |form| %>
  <div class="form-group row">
      <%= form.text_field :email, type: 'email', class: 'form-control', placeholder: 'Email', data: {test: 'email'} %>
  </div>
  <div class="form-group row ">
      <%= form.password_field :password, class: 'form-control', placeholder: 'Password', data: {test: 'password'} %>
  </div>
  <div class="form-group row">
      <%= form.submit class: 'btn btn-primary', data: {test: 'submit'} %>
  </div>
  <% if Clearance.configuration.allow_sign_up? %>
    <div class="row">
        <%= link_to t(".sign_up"), sign_up_path, data: {test: 'sign-up'} %>
    </div>
  <% end %>

<% end %>
